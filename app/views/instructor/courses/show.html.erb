<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        })
      }
    });

    $('.sections').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        })
      }
    });
    $('.header a').click(function(){
      $(this).find('i').toggleClass('fa-angle-right fa-angle-down')
    });

  });
</script>

<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <div class="col-8 offset-2">
    <%= image_tag current_course.image, class: 'img-fluid course-image' %>
  </div>

  <br>

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>
  <div class="col-8 offset-2">
    <ul class="sections">
      <% current_course.sections.rank(:row_order).each do |section| %>

        <li class="section-li">
          <div class="row">
            <div class="col-6 float-left">
              <div class="header">
                <a data-update-url="<%= instructor_section_path(section) %>" class="expand-link"  
                   data-toggle="collapse" data-target="#section-id-<%= section.id %>">
                  <%= section.title %>
                  <i id="expand-icon" class="fa fa-angle-right"></i>  
                </a>
              </div>
            </div>
            <div class="col-6 float-right">
              <%= link_to new_instructor_section_lesson_path(section), class: 'float-right ' do %>
                <i class="fa fa-plus-square add-lesson-icon"></i> Lesson
              <% end %>
            </div>
          </div>
          <ul class="lessons accordion-body collapse in" id="section-id-<%= section.id %>">
            <% section.lessons.rank(:row_order).each do |lesson| %>
              <li data-update-url="<%= instructor_lesson_path(lesson) %>">
                <p>
                  <b><%= lesson.title %></b>
                </p>
                <p>
                  <%= lesson.subtitle %>
                </p>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>

</div>