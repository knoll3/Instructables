<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to courses_path, class: 'nav-link' do %>
                See All Courses
              <% end %>
            </li>
          </ul>
          <ul class="navbar-nav">
              <% if !user_signed_in? %>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: 'nav-link' do %>
                    <i class="fa fa-sign-in"></i>
                  <% end %>
                </li>   
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
                </li>   
              <% else %>
                <li class="nav-item">
                  <%= link_to dashboard_path, class: 'nav-link' do %>
                    <i class="fa fa-user-circle"></i>
                  <% end %>
                </li>   
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                    <i class="fa fa-sign-out"></i>
                  <% end %>
                </li>   
              <% end %>
          </ul>
        </div>
      </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

    <div id="footer">
      <div class="container text-center">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>          
            <br>
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br>
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br>
            <%= link_to 'Team', '#' %>
            <br>
            <%= link_to 'Careers', '#' %>
            <br>
            <%= link_to 'Privacy Policy', '#' %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br>
            noll.kyle@gmail.com
            <br>
            444 Hall Rd
            <br>
            Stonewall LA, 71078
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br><br>
            <%= link_to 'https://github.com/knoll3' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/kyle.noll.96' do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
            <% end %>
            <%= link_to '#' do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
