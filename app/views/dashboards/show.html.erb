<br>

<div class="booyah-box col-10 offset-1 dashboard">
  <h1 class="text-center">What I'm Learning</h1>
  <hr>
  <% current_user.enrolled_courses.each do |course| %>
    <div class="col-6 offset-3">
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>
      <br>
      <%= image_tag course.image, class: 'img-fluid' %>
      <br>
      <%= course.description %>
      <br>
      <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary text-center' %>
      <hr>
      <br class="clr">
    </div>
  <% end %>

  <h1 class="text-center">What I'm Teaching</h1>
  <hr>
  <% current_user.courses.each do |course| %>
    <div class="col-6 offset-3">
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>
      <br>
      <%= image_tag course.image, class: 'img-fluid' %>
      <br>
      <%= course.description %>
      <br>
      <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary text-center' %>
      <hr>
      <br class="clr">
    </div>
  <% end %>
</div>