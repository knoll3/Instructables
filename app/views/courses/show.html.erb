<br />

<div class="booyah-box col-12 col-sm-10 offset-sm-1">
  <div class="col-12 col-sm-6 offset-sm-3 text-center article">
    <h1><%= @course.title %></h1>

    <br>

    <% if @course.image.present? %>
      <%= image_tag @course.image, class: 'center-block' %>
    <% end %>

   <br><br> 

  <!--   <% if current_user && current_user == @course.user %>
      <br />
      <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
    <% end %>
   -->

    <div class="course-description">
      <%= @course.description %>
    </div>

    <br> 

    <span class="badge badge-default">
      Cost: <%= number_to_currency @course.cost %>
    </span>

    <hr> 

    <ul class="sections">  
      <% @course.sections.each do |section| %>
        <li>
          <div class="section">
            <h4><%= section.title %></h4>
            <br>
            <% section.lessons.each do |lesson| %>
              <div class="lesson">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  -
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>